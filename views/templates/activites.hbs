<div class="container my-3 activity">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Our activities for Students</h1>
        </div>
    </div>
    <div class="row">
        {{#if flash}}
        <div class="col-4 m-auto">
            <div class="alert alert-danger alert-dismissible fade show m-0 p-1" role="alert">
                <p class="m-0">
                    {{ flash }}
                </p>
                <button type="button" class="close p-0" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        {{/if}}


    </div>
    <div class="row">
        {{#if volunteerLogged}}
        {{#each data }}
        <div class="col-12 col-sm-6 col-md-4 my-3">
            <div class="media">
                <img src="{{this.activity_image}}" width="100px" class="mr-3 img-fluid" alt="{{this.activity_name}}">
                <div class="media-body">
                    <h5 class="mt-0 mb-1">{{this.activity_name}}</h5>
                    <p class="act-details"><strong>Type:</strong> <span
                            class="badge badge-info float-right">{{ this.activity_type }}</span>
                    </p>
                    <p class="act-details">{{ this.activity_details }}</p>
                    <button type="button" class="btn btn-outline-danger delete-act float-right mb-2"
                        data-id="{{this._id}}"><i class="fas fa-trash fa-2x"></i></button>
                    <a href="/activites/{{this._id}}" class="btn btn-outline-info edit-act float-right mb-2 mr-2"
                        data-id="{{this._id}}"><i class="fas fa-edit fa-2x"></i></a>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        {{#each data }}
        <div class="col-12 col-sm-6 col-md-4 my-3">
            <div class="media">
                <img src="{{this.activity_image}}" width="100px" class="mr-3 img-fluid" alt="{{this.activity_name}}">
                <div class="media-body">
                    <h5 class="mt-0 mb-1">{{this.activity_name}}</h5>
                    <p class="act-details"><strong>Type:</strong> <span
                            class="badge badge-info float-right">{{ this.activity_type }}</span>
                    </p>
                    <p class="act-details"><a href="{{this.activity_link}}" class="link">{{ this.activity_details }}</a>
                    </p>

                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>